<body>
    <canvas id="particles"></canvas>
    <div class="floating-hearts" id="floatingHearts"></div>
    
    <div class="container">
        <h1>I Love You</h1>
        <p class="message">Every moment with you is like a beautiful dream I never want to wake up from</p>
        
        <div class="heart-container">
            <div class="heart"></div>
            <div class="heart-pulse"></div>
        </div>
        
        <p class="additional-message">You are the most beautiful person in my world, today and always</p>
    </div>

    <script>
        // Particle system for neon effect
        const canvas = document.getElementById('particles');
        const ctx = canvas.getContext('2d');
        
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        
        // Particles array
        let particles = [];
        const particleCount = 200;
        
        // Heart shape definition
        const heartShape = [];
        const heartDetail = 100;
        
        // Create heart shape points
        for (let i = 0; i < heartDetail; i++) {
            const t = i / heartDetail * Math.PI * 2;
            const x = 16 * Math.pow(Math.sin(t), 3);
            const y = -(13 * Math.cos(t) - 5 * Math.cos(2*t) - 2 * Math.cos(3*t) - Math.cos(4*t));
            heartShape.push({x, y});
        }
        
        // Particle class
        class Particle {
            constructor() {
                this.reset();
                this.size = Math.random() * 4 + 1;
            }
            
            reset() {
                // Position particles along the heart shape
                const heartPoint = heartShape[Math.floor(Math.random() * heartShape.length)];
                const scale = 12 + Math.random() * 4;
                
                this.x = canvas.width / 2 + heartPoint.x * scale;
                this.y = canvas.height / 2 + heartPoint.y * scale;
                
                // Random drift for organic feel
                this.baseX = this.x;
                this.baseY = this.y;
                
                this.density = (Math.random() * 30) + 1;
                const hue = Math.random() * 30 + 320;
                this.color = `hsl(${hue}, 100%, ${70 + Math.random() * 20}%)`;
                this.velocity = {
                    x: (Math.random() - 0.5) * 0.8,
                    y: (Math.random() - 0.5) * 0.8
                };
                this.life = 0;
                this.maxLife = Math.random() * 100 + 100;
            }
            
            update() {
                this.life++;
                
                // Drift back to heart shape
                const dx = this.baseX - this.x;
                const dy = this.baseY - this.y;
                const distance = Math.sqrt(dx * dx + dy * dy);
                
                if (distance > 5) {
                    this.velocity.x += dx / distance * 0.2;
                    this.velocity.y += dy / distance * 0.2;
                }
                
                // Apply velocity with some randomness
                this.x += this.velocity.x + (Math.random() - 0.5) * 0.8;
                this.y += this.velocity.y + (Math.random() - 0.5) * 0.8;
                
                // Fade out at end of life
                if (this.life >= this.maxLife) {
                    this.reset();
                }
            }
            
            draw() {
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                ctx.closePath();
                
                const opacity = Math.min(1, this.life / 20, (this.maxLife - this.life) / 20);
                ctx.fillStyle = `${this.color.replace(')', `, ${opacity})`).replace('hsl', 'hsla')`;
                ctx.fill();
                
                // Glow effect
                ctx.shadowBlur = 15 + Math.random() * 10;
                ctx.shadowColor = this.color;
            }
        }
        
        // Create particles
        function init() {
            particles = [];
            for (let i = 0; i < particleCount; i++) {
                particles.push(new Particle());
            }
        }
        
        // Animation loop
        function animate() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // Draw connecting lines between close particles
            for (let i = 0; i < particles.length; i++) {
                for (let j = i + 1; j < particles.length; j++) {
                    const dx = particles[i].x - particles[j].x;
                    const dy = particles[i].y - particles[j].y;
                    const distance = Math.sqrt(dx * dx + dy * dy);
                    
                    if (distance < 120) {
                        const opacity = 1 - distance / 120;
                        ctx.strokeStyle = `rgba(255, 105, 180, ${opacity * 0.3})`;
                        ctx.lineWidth = 1 + opacity * 1;
                        ctx.beginPath();
                        ctx.moveTo(particles[i].x, particles[i].y);
                        ctx.lineTo(particles[j].x, particles[j].y);
                        ctx.stroke();
                    }
                }
            }
            
            // Update and draw particles
            particles.forEach(particle => {
                particle.update();
                particle.draw();
            });
            
            requestAnimationFrame(animate);
        }
        
        // Handle window resize
        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            init();
        });
        
        // Create floating elements
        function createFloatingElements() {
            const container = document.getElementById('floatingHearts');
            const elementCount = 20;
            const elements = ['‚ù§', 'üíñ', 'üíï', 'üíò', 'üíì', 'üíó', 'üíù', 'üíû', 'üíü', 'üòò', 'ü•∞'];
            
            for (let i = 0; i < elementCount; i++) {
                const element = document.createElement('div');
                element.innerHTML = elements[Math.floor(Math.random() * elements.length)];
                
                if (element.innerHTML === 'üòò') {
                    element.classList.add('kiss');
                } else {
                    element.classList.add('floating-heart');
                }
                
                // Random position
                element.style.left = `${Math.random() * 100}vw`;
                element.style.bottom = `-50px`;
                
                // Random animation duration and delay
                const duration = Math.random() * 4 + 4;
                element.style.animationDuration = `${duration}s`;
                element.style.animationDelay = `${Math.random() * 3}s`;
                
                // Random size
                const size = Math.random() * 20 + 20;
                element.style.fontSize = `${size}px`;
                
                container.appendChild(element);
            }
        }
        
        // Create multiple floating elements over time
        function startFloatingElements() {
            createFloatingElements();
            setInterval(createFloatingElements, 3000);
        }
        
        // Create shooting stars
        function createShootingStar() {
            const star = document.createElement('div');
            star.innerHTML = '‚ú®';
            star.classList.add('shooting-star');
            star.style.left = `${Math.random() * 100}vw`;
            star.style.top = '-50px';
            star.style.animationDuration = `${Math.random() * 2 + 2}s`;
            
            document.body.appendChild(star);
            
            // Remove after animation completes
            setTimeout(() => {
                star.remove();
            }, 3000);
        }
        
        // Create occasional shooting stars
        function startShootingStars() {
            createShootingStar();
            setInterval(createShootingStar, 3000);
        }
        
        // Sweet background music
        function setupAudio() {
            document.body.addEventListener('click', function() {
                const audio = new Audio('https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3');
                audio.loop = true;
                audio.volume = 0.3;
                audio.play().catch(e => console.log("Audio play failed:", e));
                
                // Remove the event listener after first interaction
                this.removeEventListener('click', arguments.callee);
            }, {once: true});
        }
        
        // Add mouse trail of hearts
        function setupHeartTrail() {
            document.addEventListener('mousemove', function(e) {
                if(Math.random() > 0.7) {
                    const heart = document.createElement('div');
                    heart.innerHTML = '‚ù§';
                    heart.classList.add('heart-trail');
                    heart.style.left = `${e.clientX}px`;
                    heart.style.top = `${e.clientY}px`;
                    heart.style.fontSize = `${Math.random() * 20 + 10}px`;
                    heart.style.color = `hsl(${Math.random() * 60 + 320}, 100%, 70%)`;
                    heart.style.transform = 'translate(-50%, -50%)';
                    
                    document.body.appendChild(heart);
                    
                    setTimeout(() => {
                        heart.remove();
                    }, 1000);
                }
            });
        }
        
        // Add a sweet message when trying to leave
        function setupBeforeUnload() {
            window.addEventListener('beforeunload', function(e) {
                e.preventDefault();
                e.returnValue = 'Are you sure you want to leave this love behind?';
            });
        }
        
        // Start everything
        init();
        animate();
        startFloatingElements();
        startShootingStars();
        setupAudio();
        setupHeartTrail();
        setupBeforeUnload();
    </script>
</body>
</html>
